a = 'A'
b = 'B'
c = 'C'
def hano(a,b,c,n):
	if n ==1:
		print('{}-->{}'.format(a,c))   #格式化  print(a,'-->',c)
		return None
	if n == 2:
		print('{}-->{}'.format(a,c))
		print('{}-->{}'.format(a,b))
		print('{}-->{}'.format(b,c))
		return None
	hano(a,c,b,n-1)   #把n-1个盘子，从A盘借助C盘挪到B盘
	print('{}-->{}'.format(a,c))
	hano(b,a,c,n-1)
hano(a,b,c,5)
