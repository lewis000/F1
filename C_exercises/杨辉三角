//杨辉三角
#include<stdio.h>
int main()
{
	static int m,n,b[15][15];    //只能用static，否则输出结果乱码 
	b[0][0] = 1;     //b[0][0] = 1,b[0][1] = 1输出结果都是杨辉三角，b[1][0] = 1,b[2][0] = 1输出结果类似杨辉三角（最外层分别有1行、2行0）
	for(m = 1;m < 11;m++)        //n和m的初始值都要从1开始
	{
		for(n = 1;n <= m;n++)      //列数与行数相等，所以n <= m 
		{
			b[m][n] = b[m-1][n-1] + b[m-1][n];     //杨辉三角的规律 
			printf("%-5d",b[m][n]);
		}
		printf("\n");
	}
	//printf("\n");
	return 0;
}
