//p137  求100-200之间全部素数   功能实现方式不完全正确
#if(0)
#include<stdio.h>
int main()
{
	int i, n;
	for (n = 101; n <= 200; n++)
	{
		for (i = 2; i <= n - 1; i++)
			if (n % i == 0)
				break;
		if (i < n)      //只需要对下面的代码进行改动，即可实现功能（改为输出数）
			printf("%d is not prime number.\n", n);
		else
			printf("%d is prime number.\n", n);
	}
	return 0;
}
#endif
