//输出100~200内全部素数
C:
#if(0)
#include<stdio.h>
int main()
{
	int n, i,m = 0;
	for (n = 101; n <= 200; n = n + 2)
	{
		for (i = 2; i <= n - 1; i++)
		{
			if (n % i == 0)
				break;
		}
		if (i >= n)
			printf("%d\t", n);
		m += 1;     //以下三行用来控制输出格式，放在100~200的for循环内
		if (m % 10 == 0)
			printf("\n");
	}
	//if (m % 10 == 0)
		//printf("\n");
	return 0;
}
#endif

C++:
#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
	int n, i;
	int m = 0;
	bool prime;
	for (n = 101; n <= 200; n = n + 2)    //判断每一个数
	{
		prime = true;   //相比于C为什么多了prime = true和下面prime = false？？？
		for (i = 2; i < n - 1; i++)    //判断是不是素数的条件
		{
			if (n % i == 0)
			{
				prime = false;
				break;
			}
		}
		if (prime)   //用c的判断写法不对？？？？
		{
			cout << setw(5) << n;
			m = m + 1;
		}
		//m += 1;     //该行如果放入上面if循环里，输出的格式会发生变化           跟C有区别
		if (m % 10 == 0)
			cout << endl;
	}
	return 0;
}
