//p135 判断素数
C:
#if(0)
#include<stdio.h>
int main()
{
	int i, n;
	printf("please input a number:");
	scanf_s("%d", &n);   //scanf不行（IDE：VS2019）
	for (i = 2; i <= n - 1; i++)
	{
		if (n % i == 0)  //n%i与i%n结果不一致     n被i整除的表达式为：n%i
			break;
		//else
			//i = i + 1;   //内容与i++作用重复
	}
	if (i < n)
		printf("%d不是素数\n",n);
	else
		printf("%d是素数\n",n);

	return 0;
}
#endif

C++:
#include<iostream>
using namespace std;
int main()
{
	int i, n;
	cout << "please input a number:";
	cin >> n;
	for (i = 2; i <= n - 1; i++)
	{
		if (n % i == 0)
			break;
	}
	cout << "n = " << n;
	if (i < n)       //i > n结果不对
		cout << " is not prime" << endl;
	else
		cout << " is prime" << endl;
	return 0;
}


//判断素数   函数写法
C：-->也可直接改写成C++（算法不变，只改语法）
#if(0)
#include<stdio.h>
int main()
{
	void prime(int n);
	int n;
	printf("please input a number:");
	scanf_s("%d", &n);
	prime(n);
	return 0;
}

void prime(int n)
{
	int i;
	for (i = 2; i <= n - 1; i++)   //判断n能否被1和它本身之外的数整除，如果能就不是素数
	{
		if (n % i == 0)
			break;
	}
	if (i < n)
		printf("%d is not prime\n", n);
	else
		printf("%d is prime\n", n);
}
#endif

C++：
#include<iostream>
using namespace std;
int main()
{
	int prime(int n);
	int x;
	//int y;
	cout << "please input a number:";
	cin >> x;
	//y = prime(x);
	if (prime(x))    //两种写法都对
	//if(y)
		cout << x << " is prime number" << endl;
	else
		cout << x << " is not prime number" << endl;
	return 0;
}

int prime(int n)
{
	int flag = 1, i;
	//for (i = 2; i <= n - 1 && flag == 1; i++)   //没有flag==1的判断条件，结果并没有报错
	for (i = 2; i <= n - 1; i++)
	{
		if (n % i == 0)
			flag = 0;
	}
	return(flag);
}

